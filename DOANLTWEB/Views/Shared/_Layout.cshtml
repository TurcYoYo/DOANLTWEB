<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(ViewBag.Title ?? "BookStore")</title>

    <!-- Load CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #333;
        }

        /* NAVIGATION - DỄ NHÌN HƠN */
        .navbar {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.8rem;
            color: #667eea !important;
        }

        .nav-link {
            font-weight: 600;
            color: #555 !important;
            margin: 0 0.8rem;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .nav-link:hover, .nav-link.active {
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: white !important;
                transform: translateY(-2px);
            }

        /* MAIN CONTENT - DỄ NHÌN HƠN */
        .main-content {
            flex: 1;
            padding: 2rem 0;
        }

        /* HERO SECTION - SIÊU DỄ NHÌN */
        .hero-section {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 25px;
            padding: 5rem 3rem;
            text-align: center;
            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
            max-width: 1100px;
            margin: 2rem auto;
            border: 1px solid rgba(255,255,255,0.3);
        }

        .hero-title {
            font-size: 3.2rem;
            font-weight: 800;
            color: #2d3748;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }

        .hero-highlight {
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero-subtitle {
            font-size: 1.3rem;
            color: #666;
            margin-bottom: 3rem;
            line-height: 1.6;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        /* SEARCH BOX - RÕ RÀNG */
        .search-container {
            max-width: 600px;
            margin: 0 auto 3rem;
            position: relative;
        }

        .search-input {
            border-radius: 50px;
            padding: 1.2rem 2rem;
            font-size: 1.1rem;
            border: 2px solid #e2e8f0;
            background: white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
        }

            .search-input:focus {
                border-color: #667eea;
                box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
                transform: translateY(-2px);
            }

        /* BUTTONS - NỔI BẬT */
        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            border: none;
            border-radius: 50px;
            padding: 1rem 2.5rem;
            font-size: 1.1rem;
            font-weight: 700;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6);
            }

        /* FEATURES SECTION - MINH BẠCH */
        .features-section {
            margin-top: 4rem;
            padding: 3rem 0;
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 3rem;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }

        .feature-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 2.5rem 2rem;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            height: 100%;
            border: 1px solid rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
        }

            .feature-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            }

        .feature-icon {
            font-size: 3.5rem;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1.5rem;
        }

        .feature-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 1rem;
        }

        .feature-description {
            color: #666;
            line-height: 1.6;
            font-size: 1rem;
        }

        /* FOOTER - SẠCH SẼ */
        .footer {
            background: rgba(0, 0, 0, 0.9);
            color: white;
            padding: 3rem 0 2rem;
            margin-top: auto;
        }

            .footer p {
                margin-bottom: 0.5rem;
                opacity: 0.9;
            }

            .footer a {
                color: white;
                opacity: 0.8;
                transition: all 0.3s ease;
                display: inline-block;
            }

                .footer a:hover {
                    opacity: 1;
                    transform: translateY(-2px);
                    color: #667eea;
                }

        /* RESPONSIVE - ĐẸP TRÊN MỌI THIẾT BỊ */
        @@media (max-width: 768px) {
            .hero-section {
                padding: 3rem 1.5rem;
                margin: 1rem;
                border-radius: 20px;
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.1rem;
            }

            .search-input {
                padding: 1rem 1.5rem;
            }

            .btn-primary {
                padding: 0.8rem 2rem;
            }

            .feature-card {
                padding: 2rem 1.5rem;
                margin-bottom: 1.5rem;
            }

            .section-title {
                font-size: 2rem;
            }
        }

        /* BOOK CARDS - RÕ RÀNG */
        .book-card {
            transition: all 0.3s ease;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            background: white;
        }

            .book-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.15);
            }

        /* CART BADGE - NỔI BẬT */
        .cart-count {
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
            color: white;
            font-size: 0.7rem;
            font-weight: bold;
            min-width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: absolute;
            top: -5px;
            right: -5px;
        }

        /* DROPDOWN MENU - ĐẸP */
        .dropdown-menu {
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            border-radius: 15px;
            padding: 0.5rem;
        }

        .dropdown-item {
            padding: 0.7rem 1rem;
            border-radius: 8px;
            margin: 0.2rem 0;
            transition: all 0.3s ease;
        }

            .dropdown-item:hover {
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: white;
                transform: translateX(5px);
            }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fas fa-book"></i> BookStore
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home"></i> Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Sach")">
                            <i class="fas fa-book-open"></i> Danh sách sách
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (Session["KhachHang"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user"></i> @(Session["TenKH"]?.ToString() ?? "Khách hàng")
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">Thông tin tài khoản</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("MyOrders", "Order")">Đơn hàng của tôi</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Account")">
                                <i class="fas fa-user-plus"></i> Đăng ký
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="@Url.Action("Login", "Admin")">
                            <i class="fas fa-cog"></i> Quản trị
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <p>&copy; @DateTime.Now.Year - BookStore. All rights reserved.</p>
            <p>Hệ thống quản lý bán sách trực tuyến</p>
            <div class="mt-3">
                <a href="#" class="text-white me-3"><i class="fab fa-facebook fa-lg"></i></a>
                <a href="~/Views/Shared/_Layout.cshtml">~/Views/Shared/_Layout.cshtml</a>
                <a href="#" class="text-white me-3"><i class="fab fa-twitter fa-lg"></i></a>
                <a href="#" class="text-white"><i class="fab fa-instagram fa-lg"></i></a>
            </div>
        </div>
    </footer>

    <!-- Load jQuery và Bootstrap -->
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>