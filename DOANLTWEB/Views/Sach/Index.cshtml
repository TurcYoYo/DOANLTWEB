@model List<DOANLTWEB.Models.Sach>
@{
    ViewBag.Title = "Trang chủ - BookStore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-5 rounded">
    <div class="container text-center">
        <h1 class="display-4 fw-bold"><i class="fas fa-book me-3"></i>Welcome to BookStore</h1>
        <p class="lead">Khám phá thế giới sách đa dạng với hàng ngàn đầu sách hay</p>
        <a href="@Url.Action("Search", "Sach")" class="btn btn-light btn-lg mt-3">
            <i class="fas fa-search me-2"></i>Tìm sách ngay
        </a>
    </div>
</div>

<!-- Featured Books -->
<div class="row mb-5">
    <div class="col-12">
        <h2 class="text-center mb-4"><i class="fas fa-star me-2"></i>Sách Nổi Bật</h2>
    </div>

    @if (Model != null && Model.Any())
    {
        foreach (var sach in Model.Take(6))
        {
            <div class="col-md-4 col-lg-2 mb-4">
                <div class="card book-card h-100">
                    @if (!string.IsNullOrEmpty(sach.Hinh))
                    {
                        <img src="~/Content/images/@sach.Hinh" class="card-img-top"
                             alt="@sach.TenSach" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                             style="height: 200px;">
                            <i class="fas fa-book fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title">@sach.TenSach</h6>
                        <p class="card-text text-success fw-bold mb-2">
                            @string.Format("{0:N0}", sach.Gia) VNĐ
                        </p>
                        <div class="mt-auto">
                            <a href="@Url.Action("Details", "Sach", new { id = sach.MaSach })"
                               class="btn btn-primary btn-sm w-100">
                                <i class="fas fa-info-circle me-1"></i>Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>Đang tải sách...
            </div>
        </div>
    }
</div>

<!-- Categories Section -->
<div class="row mb-5">
    <div class="col-12">
        <h2 class="text-center mb-4"><i class="fas fa-tags me-2"></i>Thể Loại Sách</h2>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-bg-primary text-center">
            <div class="card-body">
                <i class="fas fa-book fa-2x mb-2"></i>
                <h5 class="card-title">Tiểu Thuyết</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-bg-success text-center">
            <div class="card-body">
                <i class="fas fa-chart-line fa-2x mb-2"></i>
                <h5 class="card-title">Kinh Tế</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-bg-warning text-center">
            <div class="card-body">
                <i class="fas fa-flask fa-2x mb-2"></i>
                <h5 class="card-title">Khoa Học</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-bg-info text-center">
            <div class="card-body">
                <i class="fas fa-search fa-2x mb-2"></i>
                <h5 class="card-title">Trinh Thám</h5>
            </div>
        </div>
    </div>
</div>

<!-- Why Choose Us -->
<div class="row">
    <div class="col-12">
        <h2 class="text-center mb-4">Tại Sao Chọn BookStore?</h2>
    </div>
    <div class="col-md-4 text-center mb-4">
        <i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
        <h5>Giao Hàng Nhanh</h5>
        <p class="text-muted">Giao hàng miễn phí trong 24h</p>
    </div>
    <div class="col-md-4 text-center mb-4">
        <i class="fas fa-award fa-3x text-warning mb-3"></i>
        <h5>Chất Lượng</h5>
        <p class="text-muted">Sách chính hãng, chất lượng cao</p>
    </div>
    <div class="col-md-4 text-center mb-4">
        <i class="fas fa-headset fa-3x text-success mb-3"></i>
        <h5>Hỗ Trợ 24/7</h5>
        <p class="text-muted">Đội ngũ hỗ trợ chuyên nghiệp</p>
    </div>
</div>