@model DOANLTWEB.Models.Sach
@{
    ViewBag.Title = "Chi tiết sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Sach")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Search", "Sach")">Tìm kiếm</a></li>
                    <li class="breadcrumb-item active">Chi tiết sách</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.Hinh))
                    {
                        <img src="~/Content/images/@Model.Hinh" alt="@Model.TenSach"
                             class="img-fluid rounded" style="max-height: 400px;">
                    }
                    else
                    {
                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                             style="height: 300px;">
                            <i class="fas fa-book fa-5x text-muted"></i>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@Model.TenSach</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Mã sách:</strong> @Model.MaSach</p>
                            <p><strong>Giá:</strong> <span class="text-success fw-bold fs-5">@string.Format("{0:N0}", Model.Gia) VNĐ</span></p>
                        </div>
                        <div class="col-md-6">
                            <p>
                                <strong>Thể loại:</strong>
                                @if (Model.TheLoaiSach != null)
                                {
                                    <span class="badge bg-secondary">@Model.TheLoaiSach.TenTLS</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </p>
                            <p>
                                <strong>Nhà xuất bản:</strong>
                                @if (Model.NhaXuatBan != null)
                                {
                                    @Model.NhaXuatBan.TenNXB
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Số trang:</strong> @(Model.SoTrang?.ToString() ?? "N/A")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Ngôn ngữ:</strong> @(Model.AddNgonNgu ?? "N/A")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Mota))
                    {
                        <div class="mb-3">
                            <h5>Mô tả:</h5>
                            <p class="text-muted">@Model.Mota</p>
                        </div>
                    }

                    @if (Model.TacGias != null && Model.TacGias.Any())
                    {
                        <div class="mb-3">
                            <h5>Tác giả:</h5>
                            <div>
                                @foreach (var tacGia in Model.TacGias)
                                {
                                    <span class="badge bg-info me-1">@tacGia.HoTenTG</span>
                                }
                            </div>
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        
                        <a href="@Url.Action("Search", "Sach")" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        border: none;
        border-radius: 10px;
    }

    .breadcrumb {
        background-color: #f8f9fa;
        border-radius: 5px;
        padding: 10px 15px;
    }
</style>

@section scripts {
    <script>
        $(document).ready(function () {
            console.log('Details page loaded');
            console.log('Add to cart button data-masach:', $('.btn-them-vao-gio').data('masach'));
        });
    </script>
}