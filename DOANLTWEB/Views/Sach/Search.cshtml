@model List<DOANLTWEB.Models.Sach>
@{
    ViewBag.Title = "Tìm kiếm sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2><i class="fas fa-search"></i> Tìm kiếm sách</h2>

            <!-- Form tìm kiếm -->
            <div class="card mb-4">
                <div class="card-body">
                    @using (Html.BeginForm("Search", "Sach", FormMethod.Get))
                    {
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label for="searchString">Từ khóa:</label>
                                    <input type="text" name="searchString" class="form-control"
                                           value="@ViewBag.SearchString" placeholder="Nhập tên sách, tác giả...">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="theLoaiId">Thể loại:</label>
                                    @Html.DropDownList("theLoaiId", (SelectList)ViewBag.TheLoaiList, "Tất cả thể loại", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Kết quả tìm kiếm -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-book"></i> Kết quả tìm kiếm
                        @if (!string.IsNullOrEmpty(ViewBag.SearchString))
                        {
                            <span class="text-muted">- Từ khóa: "@ViewBag.SearchString"</span>
                        }
                        <span class="badge bg-primary ms-2">@Model.Count kết quả</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="row">
                            @foreach (var sach in Model)
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="card h-100">
                                        @if (!string.IsNullOrEmpty(sach.Hinh))
                                        {
                                            <img src="~/Content/images/@sach.Hinh" class="card-img-top"
                                                 alt="@sach.TenSach" style="height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                 style="height: 200px;">
                                                <i class="fas fa-book fa-3x text-muted"></i>
                                            </div>
                                        }
                                        <div class="card-body">
                                            <h5 class="card-title">@sach.TenSach</h5>
                                            <p class="card-text text-muted">
                                                @if (!string.IsNullOrEmpty(sach.Mota))
                                                {
                                                    @(sach.Mota.Length > 100 ? sach.Mota.Substring(0, 100) + "..." : sach.Mota)
                                                }
                                            </p>
                                            <p class="card-text">
                                                <strong class="text-success">@string.Format("{0:N0}", sach.Gia) VNĐ</strong>
                                            </p>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-tag"></i>
                                                    @sach.TheLoaiSach?.TenTLS
                                                </small>
                                            </p>
                                        </div>
                                        <div class="card-footer">
                                            <a href="@Url.Action("Details", "Sach", new { id = sach.MaSach })"
                                               class="btn btn-primary btn-sm">
                                                <i class="fas fa-info-circle"></i> Chi tiết
                                            </a>
                                            
                                           
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <h5>Không tìm thấy kết quả nào</h5>
                            <p class="text-muted">Hãy thử với từ khóa khác hoặc thể loại khác.</p>
                            <a href="@Url.Action("Search", "Sach")" class="btn btn-primary">
                                <i class="fas fa-redo"></i> Thử lại
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
</style>
@section scripts {
    <script>
        $(document).ready(function () {
            console.log('Search page loaded');
            console.log('Number of add to cart buttons:', $('.btn-them-vao-gio').length);

            // Test click manually
            $('.btn-them-vao-gio').each(function() {
                console.log('Button found with data-masach:', $(this).data('masach'));
            });
        });
    </script>
}
