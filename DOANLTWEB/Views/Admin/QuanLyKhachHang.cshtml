@model List<DOANLTWEB.Models.KhachHang>
@{
    ViewBag.Title = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <div class="container-fluid">
        <h1><i class="fas fa-users"></i> Quản lý khách hàng</h1>
        <p class="mb-0">Quản lý thông tin khách hàng</p>
    </div>
</div>

<div class="container-fluid">
    <div class="table-container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4><i class="fas fa-list"></i> Danh sách khách hàng</h4>
            <span class="badge bg-primary">@Model.Count khách hàng</span>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã KH</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var khachHang in Model)
                        {
                            <tr>
                                <td><strong>@khachHang.MaKH</strong></td>
                                <td>@khachHang.HoTenKH</td>
                                <td>@khachHang.email</td>
                                <td>@khachHang.SDT</td>
                                <td>@khachHang.DiaChiKH</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                <h5>Không có khách hàng nào</h5>
                <p class="mb-0">Chưa có khách hàng nào trong hệ thống.</p>
            </div>
        }
    </div>
</div>